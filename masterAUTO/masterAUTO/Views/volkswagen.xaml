<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="masterAUTO.Views.volkswagen">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Margin="10">
            <Image x:Name="kartinka"></Image>
            <Label x:Name="header" Text="Модели Volkswagen:" FontSize="Medium" />
            <Picker x:Name="picker" SelectedIndexChanged="picker_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Volkswagen Bora 1.9tdi</x:String>
                    <x:String>Volkswagen Passat 2.5tdi B5.5</x:String>
                    <x:String>Volkswagen Golf 4 1.9tdi</x:String>
                    <x:String>Volkswagen Multivan T5 2.5tdi</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>